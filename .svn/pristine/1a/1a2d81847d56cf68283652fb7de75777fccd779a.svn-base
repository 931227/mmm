/*搜索区域*/
#search{
  padding: 10px;
  background-color: #fff;
  form{
    width: 100%;
    height: 30px;
    position: relative;
    padding-right: 80px;
    input[type="search"]{
      width: 100%;
      height: 100%;
      background-color: #f1f1f1;
      border-radius: 15px;
      padding-left: 15px;
      font-size: 14px;
      line-height: 30px;
    }
    input[type="button"]{
        position: absolute;
        right: 0;
        top: 0;
        width: 63px;
        height: 100%;
        border-radius: 15px;
        background-color: #ff841d;
        font-size: 18px;
        color:#fff;
    }

  }
}
/*菜单区域*/
#menu{
  margin:5px 0;
  padding: 8px;
  background-color: #fff;
  .row{
    .col-xs-3 {
      a{
        display: block;
        width: 100%;
        height: 100%;
        padding: 10px;
        text-align: center;
        img{
          width:50px;
        }
        p{
          text-align: center;
          font-size: 14px;
          color:#000;
          margin-top: 5px;
        }
      }
    }
    .col-xs-3:nth-last-child(-n+4) {
      display: none;
    }
  }
}
/*商品推荐*/
#recommend{
  height:600px;
  background-color: #fff;
}
/*品牌排行*/
#brand{
  height: 35px;
  background-color: #ff9000;
  margin: 10px 0 20px 0;
}
